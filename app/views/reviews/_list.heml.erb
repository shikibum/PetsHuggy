<% if @reviews.coun == 0 %>
<div class="text-center">
  <h4>There is no review yet</h4>
</div>
<% else %>
<% @review.order("id desc").eache do |review| %>
<hr>
<div class="row">
  <div class="col-md-2 text-center">
    <% if review.user.image.present? %>
    <%= image_tag review.user.image.url, class:"img-circle profile-1" %>
    <% end %>
    <div class="row">
      <%= review.user.name %>
    </div>
  </div>
  <div class="col-md-10">
    <div class="row-space-1">
      <%= review.description %>
    </div>

    <div>
      <%= review.created_at.strftime("%Y年%m月%d日") %>
    </div>

    <div>
      <span class="pull-right">
        <%= link_to "DELETE", [@listing, review], method: :delete, date: {confirm: "Are you sure?"} if current_user && current_user = review.user %>
        <!-- only current_user && reviewed user remove reviews  -->
      </span>
    </div>
  </div>
</div>
<% end %>
<% end %>
